<div class="row col-lg-12">
    <div class="card mt5 mb-5 ">
		<div class="card-body">
			<h2 class="text-center">Listing Employees</h2>
		</div>
	</div>
	<%= link_to "signup", signup_path, class: "btn btn-primary btn-lg mb-4"  %>
	<table class="table table-bordered">
		<tread>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>email</th>
				<th>password</th>
			</tr>
		</tread>
		<tbody>
      <% if @users %>
  			<% @users.each do |user| %>
  				<tr>
  					<td><%= user.id %></td>
  					<td><%= user.name %></td>
  					<td><%= user.email %></td>
  					<td><%= user.password %></td>
  				</tr> 
  			<% end %>
      <% end %>
		</tbody>
	</table>
</div>